{%- default src: nil -%}
{%- default options: nil -%}
{%- liquid
  assign attributes = ''
  for option in options
    assign key = option[0]
    assign value = option[1] | escape
    assign attributes = attributes | append: ' ' | append: key | append: '="' | append: value | append: '"'
  endfor
-%}
<script src="{{ src }}"{{ attributes }}></script>
