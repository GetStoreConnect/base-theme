{%- default provider: nil %}
{%- default order: nil %}
{%- assign code = provider.code | downcase %}

{%- case code | downcase %}
  {%- when "adyen" %}
    {% render "payment_providers/forms/adyen", provider: provider, order: order %}
  {%- when "authorizenet" %}
    {% render "payment_providers/forms/authorize_net", provider: provider, order: order %}
  {%- when "eway" %}
    {% render "payment_providers/forms/eway", provider: provider, order: order %}
  {%- when "square" %}
    {% render "payment_providers/forms/square", provider: provider, order: order %}
  {%- when "stripe" %}
    {% render "payment_providers/forms/stripe", provider: provider, order: order %}
{%- endcase %}
