{% assign provider_code = payment_provider.code | downcase %}
{%- case provider_code %}
  {%- when "adyen" %}
    {% render "account/subscriptions/payment_providers/forms/adyen", form: form, payment_provider: payment_provider, order: order %}
  {%- when "stripe" %}
    {% render "account/subscriptions/payment_providers/forms/stripe", form: form, payment_provider: payment_provider, order: order %}
  {%- when "eway" %}
    {% render "account/subscriptions/payment_providers/forms/eway", form: form, payment_provider: payment_provider, order: order %}
  {%- when "authorizenet" %}
    {% render "account/subscriptions/payment_providers/forms/authorize_net", form: form, payment_provider: payment_provider, order: order %}
{%- endcase %}
