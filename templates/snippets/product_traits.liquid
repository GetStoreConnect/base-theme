{%- if product.trait_groups.size > 0 %}
  {%- capture traits %}
    {%- for trait_group in product.trait_groups %}
      {%- if trait_group.traits.size > 0 %}
        <div class="SC-Traits_category">
          <div class="SC-Traits_title">
            <h5>{{ trait_group.name }}</h5>
          </div>
          {%- for trait in trait_group.traits %}
            <dl class="SC-Traits_category_trait">
              <dt class="SC-Traits_category_trait_name">
                {{ trait.name }}
              </dt>
              <dd class="SC-Traits_category_trait_value">
                {%- case trait.value_type %}
                  {%- when 'Checkbox' %}
                  {%- case trait.value %}
                    {%- when true %}
                    Yes
                  {%- else %}
                    No
                  {%- endcase %}
                {%- else %}
                  {{ trait.value | number, compact: true }}
                  {{ trait.unit }}
                {%- endcase %}
              </dd>
            </dl>
          {%- endfor %}
        </div>
      {%- endif %}
    {%- endfor %}
  {%- endcapture %}

  {%- if traits %}
  <div class="SC-Traits">
    {{ traits }}
  </div>
  {%- endif %}
{%- endif %}
