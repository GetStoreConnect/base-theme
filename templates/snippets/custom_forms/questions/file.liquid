{%- default field_name: blank %}
{%- default field: blank %}

{%- assign answer_field_name = field_name | append: "[answer]" %}
{%- assign url_field_name = field_name | append: "[url]" %}

<section class="SC-Field SC-Field-expand{% if field.errors != blank %} has-error{% endif %}" data-cloudinary-upload-wrapper>
  <label class="SC-Field_label">
    {{ question.question_content }}
    <input type="file" data-cloudinary-upload-url="{{ question.direct_upload_url }}" name="{{ field_name }}" class="SC-Field_input sc-one-whole sc-pe-small" data-answer-field="{{ answer_field_name }}" data-url-field="{{ url_field_name }}" value="{{ field.value }}" />
    <input type="hidden" name="{{ answer_field_name }}" />
    <input type="hidden" name="{{ url_field_name }}" />
  </label>
  <span class="SC-Field_error">{{ field.errors | try: "messages" }}</span>
  <div class="SC-Progress sc-hide">
    <span class="SC-Percentage SC-Percentage-0"></span>
  </div>
</section>
