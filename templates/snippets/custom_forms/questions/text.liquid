{%- default field_name: blank %}
{%- default field: blank %}

<section class="SC-Field SC-Field-expand{% if field.errors != blank %} has-error{% endif %}">
  <label class="SC-Field_label">
    {{ question.question_content }}
    <input class="SC-Field_input sc-one-whole" name="{{ field_name }}" value="{{ field.value }}" {% if field.required? %} required{% endif %} />
  </label>
  <span class="SC-Field_error">{{ field.errors | try: "messages" }}</span>
</section>
