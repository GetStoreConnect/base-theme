<template id="sc-accordion">
  {% assign heading = 'Accordion heading'  %}

  <style>
    section {
      text-align: left;
      border-top: var(--sc-border-width) solid var(--sc-border-color);
    }

    button {
      width: 100%;
      display: flex;
      align-items: center;
      padding: spacing('medium') 0;
    }

    button span {
      pointer-events: none;
      font-weight: var(--sc-font-bold);
      flex-grow: 1;
      text-align: left;
      margin: 0;
      @include truncate-single-line;
    }

    button svg {
      flex-shrink: 0;
      width: 10px;
      height: 10px;
      pointer-events: none;
      margin-right: spacing('small');
      fill: shade('darkest');
    }

    div {
      color: shade('darkest');
      padding: 0 0 spacing('base') 0;
    }

    p:last-child {margin: 0;}
  </style>

  <section>
    <button type="button">
      <span>{{ heading }}</span>
      <svg data-accordion-icon viewBox="0 0 100 100">
        <rect x="0" y="42" width="100%" height="16" rx="8"></rect>
        <rect x="42" y="0" width="16" height="100%" rx="8"></rect>
      </svg>
    </button>
    <div aria-hidden="true" style="display: none">
      <slot name="accordion-body">Default</slot>
    </div>
  </section>
</template>
