{%- default heading: blank %}
{%- default content: blank %}
{%- default value: blank %}
{%- default open: false %}
{%- default style_class: blank %}

<section class="SC-Accordion {{ style_class }}" data-accordion>
  <button
    class="SC-Accordion_header"
    type="button"
    data-accordion-trigger>

    {%# Heading %}
    {%- if heading %}
      <div class="SC-Accordion_header_heading">
        {{ heading }}
      </div>
    {%- endif %}

    {%# Value %}
    {%- if value != blank %}
      <div class="SC-Accordion_header_label">
        <div class="SC-Count SC-Count-small">
          {{ value }}
        </div>
      </div>
    {%- endif %}

    {%# Icon %}
    <svg class="SC-Accordion_header_icon{% if open %} is-active{% endif %}"
         data-accordion-icon
         viewBox="0 0 100 100">
      <rect x="0" y="42" width="100%" height="16" rx="8"></rect>
      <rect x="42" y="0" width="16" height="100%" rx="8"></rect>
    </svg>
  </button>

  <div
    class="SC-Accordion_body{% if open %} is-expanded{% endif %}"
    aria-expanded="{% if open %}true{% endif %}"
    data-accordion-target>
    {{ content }}
  </div>
</section>
