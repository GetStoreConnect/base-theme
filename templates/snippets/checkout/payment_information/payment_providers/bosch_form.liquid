{%- assign provider_id = payment_provider.id %}
{%- assign provider = payment_provider.code %}
{%- assign form_id = provider | append: "PaymentForm" | append: provider_id %}
{%- assign button_id = provider | append: "PaymentButton" | append: provider_id %}

{%- form "payment",
         provider: payment_provider,
         id: form_id,
         class: 'SC-Panel SC-Panel-default',
         data-provider: provider,
         data-provider-id: provider_id %}
  <a href="#" id="{{ button_id }}" class="SC-Button SC-Button-primary SC-Button-expanded-up-to-small">
    {{ 'checkout.gateways.form.pay_now' | t }}
  </a>
{% endform -%}

{%- require 'scripts/gateways/bosch.js' %}

<script>
  StoreConnect.Gateways.Bosch({ providerId: "{{ provider_id }}", providerName: "{{ provider }}" });
</script>
