<div id="StripeScriptBlock{{ provider_id }}"></div>

<fieldset class="SC-Fieldset">
  <div class="SC-Field">
    {% assign field = form.fields["card_number"] %}
    <label for="{{ field.id }}" class="SC-Field_label">
      {{ "checkout.gateways.form.card_number" | t }}
    </label>
    <div id="{{ field.id }}"
          data-placeholder="{{ "checkout.gateways.form.card_number_placeholder" | t }}">
    </div>
  </div>

  <div class="SC-Field">
    {% assign field = form.fields["card_name"] %}
    <label for="{{ field.id }}" class="SC-Field_label">
      {{ "checkout.gateways.form.card_name" | t }}
    </label>
    <input type="type" name="{{ field.name }}" id="{{ field.id }}"
           class="SC-Field_input sc-expand"
           autocomplete="cc-name"
           required>
  </div>

  <div class="SC-Fieldset_row">
    <div class="SC-Field SC-Field-small">
      {% assign field = form.fields["card_expiry"] %}
      <label for="{{ field.id }}" class="SC-Field_label">
        {{ "checkout.gateways.form.expiry" | t }}
      </label>
      <div id="{{ field.id }}"
            data-placeholder="{{ "checkout.gateways.form.expiry_placeholder_short" | t }}">
      </div>
    </div>
    <div class="SC-Field SC-Field-small">
      {% assign field = form.fields["card_verification"] %}
      <label for="{{ field.id }}" class="SC-Field_label">
        {{ "checkout.gateways.form.verification" | t }}
      </label>
      <div id="{{ field.id }}" data-placeholder=""></div>
    </div>
  </div>
</fieldset>

<div id="StripePaymentError{{ provider_id }}" class="SC-Field SC-Alert sc-hide"></div>
